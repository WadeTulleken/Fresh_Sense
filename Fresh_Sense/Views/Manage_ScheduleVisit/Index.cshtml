@model IEnumerable<Fresh_Sense.Models.Schedule_MaintenanceVisit>

@{
    Layout = "_FridgeServices";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Scheduled Visits</title>
    <link rel="stylesheet" href="~/css/Manage_Schedule.css">
</head>
<body>


    <div class="fault-table">
        <h2>Manage Scheduled Visits</h2>
        <table>
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Technician Allocated</th>
                    <th>Fridge Model</th>
                    <th>Location</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Notes</th>
                    <th>Actions</th> <!-- New column for Edit/Delete actions -->
                </tr>
            </thead>
            <tbody>
                @foreach (var visit in Model)
                {
                    <tr>
                        <td>@visit.CustomerName</td>
                        <td>@visit.TechnicianAllocation</td>
                        <td>@visit.FridgeModel</td>
                        <td>@visit.Location</td>
                        <td>@visit.Date</td>
                        <td>@visit.Time</td>
                        <td>@visit.Notes</td>
                        <td>
                            <!-- Edit and Delete buttons -->
                            <a href="@Url.Action("Edit", "Manage_ScheduleVisit", new { id = visit.ScheduleMaintenanceVisitID })" class="btn btn-primary">Edit</a>
                            <a href="@Url.Action("Delete", "Manage_ScheduleVisit", new { id = visit.ScheduleMaintenanceVisitID })" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>




