<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FreshSense Dashboard</title>
    <link rel="stylesheet" href="@Url.Content("~/css/MaintenanceLandingPage.css")">
</head>
<body>

    <main>
        <section class="dashboard">
            <div class="card">
                <div class="icon">
                    <img src="@Url.Content("~/css/M View.gif")" alt="View Icon">

                </div>
                <h3>View</h3>
                <a type="button" class="buttons" asp-controller="View" asp-action="Index">Select</a>
            </div>
            <div class="card">
                <div class="icon">
                    <img src="@Url.Content("~/css/Maintenance V.gif")" alt="Visits Icon">
                    
                </div>
                <h3>Visits</h3>
                <a type="button" class="buttons" asp-controller="Visits" asp-action="Index">Select</a>

            </div>
            <div class="card">
                <div class="icon">
                    <img src="@Url.Content("~/css/Create Faults M..gif")" alt="Create Faults Icon">
                 </div>
                <h3>Create Faults</h3>
                <a type="button" class="buttons" asp-controller="Maintenance_Fault" asp-action="Create">Select</a>
            </div>
        </section>
    </main>

</body>
</html>

