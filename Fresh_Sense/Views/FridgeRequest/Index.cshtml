@model IEnumerable<Fresh_Sense.Models.FridgeRequest>

@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Process Faults</title>
    <link rel="stylesheet" href="~/css/ProcessFaults.css">
    <style>
        /* Add some basic styling for the search box */
        .search-container {
            margin-bottom: 20px;
        }

        .search-box {
            display: flex;
        }

        .search-box input {
            flex: 1;
            padding: 8px;
        }

        .search-box button {
            padding: 8px;


        }

        h2 {
            background-color: steelblue; /* Steel blue background */
            color: white; /* White text color */
            font-weight: bold; /* Bold text */
            padding: 20px; /* Padding around the text */
            border-radius: 15px; /* Rounded edges */
            margin: 20px 0; /* Margin above and below the heading */
            text-align: center;
        }

        .red-button {
            color: white;
            background-color: red;
            float: right;
            padding: 10px 20px;
            text-decoration: none;
        }


    </style>
</head>
<body>
    <a href="@Url.Action("CustomerLiaisonPortal", "Home")" class="red-button">Back</a>


    <div class="container">
        <h2>Manage Fridge Requests</h2>
        <main>
            
            
            @if (Model.Count() > 0)
            {
                <table id="faultTable">
                    <thead>
                        <tr>
                            <th>Request Number</th>
                            <th>Fridge Model</th>
                            <th>Reason for the Request</th>
                            <th>More about the Request</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Request in Model)
                        {
                            <tr>
                                <td>@Request.RequsetID</td>
                                <td>@Request.FridgeModel</td>
                                <td>@Request.ReasonForRequest</td>
                                <td>@Request.MoreAboutYourRequest</td>
                                <td>
                                    <a type="button" class="buttons" asp-controller="FridgeRequest" asp-action="ViewRequest" asp-route-id="@Request.RequsetID">View</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </main>
    </div>
</body>
</html>

