@model Fresh_Sense.Models.Maintenance_Fault

@* @{
    ViewData["Title"] = "Maintenance Fault";
}
 *@


<h2>Maintenance Fault</h2>

@* <h3>Are you sure you want to delete this visit?</h3> *@
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">Technician</dt>
        <dd class="col-sm-10">@Model.TechnicianAllocation</dd>

        <dt class="col-sm-2">Fridge Model</dt>
        <dd class="col-sm-10">@Model.FridgeModel</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.DateReported</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>


        

        <dt class="col-sm-2">Fault Description</dt>
        <dd class="col-sm-10">@Model.FaultDesc</dd>
    </dl>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Mf_Id" />
        <button type="submit" class="btn-download" onclick= "window.print()">Save as PDF</button> <!-- Changed class to btn-download -->
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

    <style>
        h2 {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #333;
        }

        dl.row {
            font-size: 18px;
            margin-top: 20px;
        }

        dt {
            font-weight: bold;
            color: #555;
            margin-bottom: 10px;
        }

        dd {
            margin-bottom: 15px;
            color: #333;
        }

        button.btn-download {
            font-size: 16px;
            padding: 10px 20px;
            background-color: #28a745; /* Green color */
            color: white; /* Text color */
            border: none; /* Remove default border */
            border-radius: 5px; /* Rounded corners */
            cursor: pointer; /* Pointer cursor on hover */
            transition: background-color 0.3s; /* Smooth transition */
        }

            button.btn-download:hover {
                background-color: #218838; /* Darker green on hover */
            }

        a.btn-secondary {
            font-size: 16px;
            padding: 10px 20px;
        }

        hr {
            margin: 20px 0;
            border: 1px solid #ddd;
        }
    </style>







</div>
