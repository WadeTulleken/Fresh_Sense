    <div class="fault-table">
        <h2>View Maintenance Fault</h2>
        <table>
            <thead>
                <tr>
                    <th>Technician Allocated</th>
                    <th>Fridge Model</th>
                    <th>Date Reported</th>
                    <th>Status</th>
                    <th>Fault Description</th>
                    <th>Actions</th> <!-- New column for Edit/Delete actions -->
                </tr>
            </thead>
            <tbody>
                @foreach (var visit in Model)
                {
                    <tr>
                        <td>@visit.TechnicianAllocation</td>
                        <td>@visit.FridgeModel</td>
                        <td>@visit.DateReported</td>
                        <td>@visit.Status</td>
                        <td>@visit.FaultDesc</td>
                        <td>
                            <!-- Edit and Delete buttons -->
                            <a href="@Url.Action("Edit", "FridgeFault", new { id = visit.Mf_Id })" class="btn btn-primary">View</a>
                            @* <a href="@Url.Action("Download", "Manage_ScheduleVisit", new { id = visit.Mf_Id })" class="btn btn-danger">Download</a> *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>




