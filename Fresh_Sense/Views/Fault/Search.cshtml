@{
    Layout = "_FaultStatus";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Fault Status</title>
    <link rel="stylesheet" href="~/css/FaultStatus.css">
</head>
<style>
    h1 {
        border-radius: 15px;
        font-weight: bold;
    }
</style>
<body>
    <div class="container">
        <div class="main-content">
            <h1>View Fault Status</h1>
            <br />
            <br />
            <form asp-action="Search" method="post">
                <label for="faultID" style="font-weight: bold;">Fault Number:</label>
                <div class="input-group">
                    <input type="number" name="id" class="form-control" />
                    <button type="submit" class="btn btn-primary">Search</button>
                    <a type="button" class="btn cancel" asp-controller="Home" asp-action="FaultPortal">Cancel</a>
                </div>
            </form>

            @if (ViewBag.Message != null)
            {
                <p style="color: red;">@ViewBag.Message</p>
            }
        </div>
    </div>
</body>
</html>
