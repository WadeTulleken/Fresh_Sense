@model IEnumerable<Fresh_Sense.Models.ProcessPurchaseRequest>

@{
    Layout = "_Purchasing";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Suppliers</title>
    <link rel="stylesheet" href="~/css/ProcessFaults.css">
</head>
<body>
    <a href="@Url.Action("PurchasingTechn", "Home")" class="back-button">Back</a>
    <div class="container">
        <main>
            <h1>Process Purchase Request</h1>
            @if (Model.Count() > 0)
            {
                <table>
                    <thead>
                        <tr>
                            <th>Supplier Name</th>
                            <th>Fridge Requested</th>
                            <th>Status</th>
                            <th>View and Process</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model)
                        {
                            <tr>
                                <td>@request.Supplier.SupplierName</td>
                                <td>@request.PRFridgeRequested</td>
                                <td>@request.RequestStatus</td>
                                <td>
                                    <a href="@Url.Action("Edit", "ProcessPurchaseRequest", new { id = request.RequestId })" class="view-button">Process</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No purchase requests found.</p>
            }
        </main>
    </div>
</body>
</html>