@model Fresh_Sense.Models.FridgeAllocation

@{
    ViewData["Title"] = "Maintenance Fault";
}



<h2>View Customer Allocation</h2>

@* <h3>Are you sure you want to delete this visit?</h3> *@
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">Customer Name</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>

        <dt class="col-sm-2">Serial Number</dt>
        <dd class="col-sm-10">@Model.SerialNumber</dd>

        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>

    </dl>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="FAId" />
        @* <button type="submit" class="btn-download">Download</button> *@
        <button type="submit" class="btn-download" onclick="window.print()">Save as PDF</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

    <style>
        h2 {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #333;
        }

        dl.row {
            font-size: 18px;
            margin-top: 20px;
        }

        dt {
            font-weight: bold;
            color: #555;
            margin-bottom: 10px;
        }

        dd {
            margin-bottom: 15px;
            color: #333;
        }

        button.btn-download {
            font-size: 16px;
            padding: 10px 20px;
            background-color: #28a745; /* Green color */
            color: white; /* Text color */
            border: none; /* Remove default border */
            border-radius: 5px; /* Rounded corners */
            cursor: pointer; /* Pointer cursor on hover */
            transition: background-color 0.3s; /* Smooth transition */
        }

            button.btn-download:hover {
                background-color: #218838; /* Darker green on hover */
            }

        a.btn-secondary {
            font-size: 16px;
            padding: 10px 20px;
        }

        hr {
            margin: 20px 0;
            border: 1px solid #ddd;
        }
    </style>

    </div>
