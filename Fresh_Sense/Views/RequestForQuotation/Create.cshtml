@model Fresh_Sense.Models.RequestForQuotation

@{
    Layout = "_Purchasing";
    var suppliers = ViewBag.Suppliers as List<Fresh_Sense.Models.Suppliers>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Request For Quotation</title>
    <link rel="stylesheet" href="~/css/ProcessFaults.css">
</head>
<body>
    <div class="container">
        <main>
            <h1>Create Request for Quotation</h1>
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label asp-for="FridgeModel" class="control-label">Fridge Model</label>
                    <input asp-for="FridgeModel" class="form-control" placeholder="Enter Fridge Model" />
                    <span asp-validation-for="FridgeModel" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="QuotationDeadline" class="control-label">Deadline</label>
                    <input asp-for="QuotationDeadline" class="form-control" type="date" />
                    <span asp-validation-for="QuotationDeadline" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SupplierId" class="control-label">Select Supplier</label>
                    <select asp-for="SupplierId" class="form-control">
                        <option value="">-- Select Supplier --</option>
                        @foreach (var supplier in suppliers)
                        {
                            <option value="@supplier.SupplierId">@supplier.SupplierName</option>
                        }
                    </select>
                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                </div>

                <div class="buttons">
                    <button type="submit" class="submit">Create</button>
                    <a class="cancel" href="@Url.Action("PurchasingTechn", "Home")">Cancel</a>
                </div>
            </form>
        </main>
    </div>
</body>
</html>
