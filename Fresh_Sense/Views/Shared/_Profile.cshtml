<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FreshSense</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Profile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FreshSense.styles.css" asp-append-version="true" />


</head>
<body>
    <div class="wrapper">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <div class="logo"><img src="~/css/FreshSense-logo.jpg" alt="FreshSense Logo"></div>
                    <partial name="_LoginPartial" />
                </div>
            </nav>
        </header>
        <div class="d-flex">

            <div class="sidebar">
                <ul>
                    
                    <br />
                    <br />
                    <br />
                    <li>
                        <a class="nav-link" style="background-color:lightskyblue; text-align:center; display:block;" asp-controller="Profile" asp-action="Index">Update Profile</a>
                    </li>
                    <br />
                    
                    <li>
                        <a class="nav-link" style="background-color:lightskyblue; text-align:center; display:block;" asp-controller="Home" asp-action="FaultPortal">Fridge Fault</a>
                    </li>
                    <br />
                   
                    <li>
                        <a class="nav-link" style="background-color:lightskyblue; text-align:center; display:block;" asp-controller="Home" asp-action="MaintenancePortal">Fridge Maintenance</a>
                    </li>
                </ul>
            </div>

            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
        <footer>
            Created by <a href="#">M.D.S Interactive Developers</a>
        </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



 
