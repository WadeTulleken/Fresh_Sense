<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - FreshSense</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/FaultTechDashBoard.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="logo"><img src="~/css/FreshSense-logo.jpg" alt="FreshSense Logo"></div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="dropdown">
        <!-- Change the button text to a hamburger icon using Unicode -->
        <button onclick="myFunction()" class="dropbtn">&#9776;</button> <!-- Unicode for hamburger icon -->

        <div id="myDropdown" class="dropdown-content">
            <a asp-controller="Fault" asp-action="Index">Process Faults</a>
        </div>
    </div>


    <div class="container">
        @RenderBody()
    </div>

    <footer>
        Created by <a href="#">M.D.S Interactive Developers</a>
    </footer>

    <script>
        function myFunction() {
            document.getElementById("myDropdown").classList.toggle("show");
        }

    </script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

