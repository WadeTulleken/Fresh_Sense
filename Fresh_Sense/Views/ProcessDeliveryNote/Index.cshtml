@model IEnumerable<Fresh_Sense.Models.ProcessDeliveryNoteModel>

@{
    Layout = "_Purchasing";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Process Delivery Note</title>
    <link rel="stylesheet" href="~/css/ProcessFaults.css">
</head>
<body>
    <a href="@Url.Action("PurchasingTechn", "Home")" class="back-button">Back</a>
    <div class="container">
        <main>
            <h1>Process Delivery Note</h1>
            @if (Model.Count() > 0)
            {
                <table>
                    <thead>
                        <tr>
                            <th>Supplier Name</th>
                            <th>Fridge</th>
                            <th>Quantity</th>
                            <th>Status</th>
                            <th>View and Process</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var note in Model)
                        {
                            <tr>
                                <td>@note.Supplier.SupplierName</td>
                                <td>@note.FridgeModel</td>
                                <td>@note.DNQuantity</td>
                                <td>@note.DNStatus</td>
                                <td>
                                    <a href="@Url.Action("Edit", "ProcessDeliveryNote", new { id = note.DNId })" class="view-button">View and Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No delivery notes found.</p>
            }
        </main>
    </div>
</body>
</html>