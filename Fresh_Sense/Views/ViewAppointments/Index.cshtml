@model IEnumerable<Fresh_Sense.Models.Schedule_MaintenanceVisit>

@{
    Layout = "_Layout"; // You can use your custom layout here
}

<!DOCTYPE html>
<html>
<head>
    <title>View Appointments</title>
    <link rel="stylesheet" href="~/css/view_appointments.css" />
</head>
<body>
    <div class="container">
        <h1>Scheduled Maintenance Visits</h1>

        <!-- Filter form -->
        <form method="get" action="">
            <div class="form-group">
                <label>Technician:</label>
                <input type="text" name="technician" class="form-control" placeholder="Enter Technician Name" />
            </div>

            <div class="form-group">
                <label>Fridge Model:</label>
                <input type="text" name="fridgeModel" class="form-control" placeholder="Enter Fridge Model" />
            </div>

            <div class="form-group">
                <label>Start Date:</label>
                <input type="date" name="startDate" class="form-control" />
            </div>

            <div class="form-group">
                <label>End Date:</label>
                <input type="date" name="endDate" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Filter</button>
        </form>

        <!-- Display the list of scheduled visits -->
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Technician</th>
                    <th>Fridge Model</th>
                    <th>Location</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Notes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var visit in Model)
                {
                    <tr>
                        <td>@visit.CustomerName</td>
                        <td>@visit.TechnicianAllocation</td>
                        <td>@visit.FridgeModel</td>
                        <td>@visit.Location</td>
                        <td>@visit.Date</td>
                        <td>@visit.Time</td>
                        <td>@visit.Notes</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Back button -->
        <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("Create", "Schedule_MaintenanceVisit")'">Schedule New Visit</button>
    </div>
</body>
</html>

